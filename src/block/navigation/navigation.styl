.display_inline_flex
  display inline-flex!important
.display_none
  display none!important
.display_block
  display block
.header-navigation
  flex-box(flex, row, space-around, flex-end)
.mobile_menu_icon, .mobile_menu_icon_close
  display none
  cursor pointer
.navigation
  display inline-flex
  & li
    position relative
    margin 0 10px
    & a
      text-decoration none
      color #fff
      font-size 14px
      font-weight bold
      line-height 1.2
    & a:hover
      color #ffd119
      transition 0.3s

@media (max-width: 990px)
  .navigation_wrapper
    position relative
  .mobile_menu_icon
    display block
  .navigation
    display none
    position absolute
    top 40px
    left -70px
    z-index 10
  .navigation li a
    flex-box(flex, row, flex-end, flex-end)
    margin-bottom 20px
  .header-navigation
    margin 0 30px
    width 100vw
    flex-box(flex, row, space-around, flex-end)